---
interface Props {
  children: {
    type: string
    text: string
    underline?: boolean
    bold?: boolean
  }[]
}

const { children } = Astro.props;
---

{children.map(child => 
    <p class={`container mx-auto text-28 leading-130% mt-6 ${child.underline ? 'text-main' : child.bold ? 'font-bold' : 'font-normal'}`}>
        {child.text}
    </p>
)}