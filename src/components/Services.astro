---
import ServiceCard from './ServiceCard.astro';
import type Service from '../interfaces/service';

interface Props {
    title: string,
	cards: Service[]
}

const { title, cards } = Astro.props;
---

<section class="container mx-auto py-100">
    <h2 class="text-center text-32 sm:text-64 uppercase font-medium">{title}</h2>
    <div class="mobile-slider flex overflow-auto scroll-smooth sm:grid grid-cols-3 gap-x-8 gap-y-6">
        {cards.map(card => 
            <ServiceCard title={card.attributes.Title} img={card.attributes.Thumbnail.data.attributes.url} />
        )}
    </div>
</section>